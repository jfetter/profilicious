doctype html
html(lang='en')
  head
    title= title
    link(href='../vendor/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
    link(href='../vendor/sweetalert/dist/sweetalert.css', rel='stylesheet')
    link(href='../css/style.css', rel='stylesheet')
    block css
  body
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#nav-collapse', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/')= title
        #nav-collapse.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li
              a.regist(href='/register')#registerLink Register
            li
              a.log-in(href='/login')#loginLink Login

    block content
    script(src='../vendor/jquery/dist/jquery.min.js')
    script(src='../vendor/bootstrap/dist/js/bootstrap.min.js')
    script(src='../vendor/sweetalert/dist/sweetalert.min.js')
    block js
