extends ./layout

block css
  link(href='css/style.css', rel='stylesheet')

block content
  .container
    div
      .form-group
        label#un(for='username') Username
        input#username.form-control.lab(type='text', placeholder='Username')
      .form-group
        label.lab(for='pw1') Password
        input#pw1.form-control.lab(type='password', placeholder='Password')
      .form-group
        label.lab(for='pw2') Password
        input#pw2.form-control.lab(type='password', placeholder='Password (again)')
      button.btn.btn-default.lab#register Register
      .moreInfo.row
        .col-sm-12
          .form-group.hidden
            label(for='email') email
            input#email.form-control.hidden(type='text', placeholder='email')
          .form-group.hidden
            label(for='image') image URL
            input#image.form-control.hidden(type='text', placeholder='url of image')
            // plugin gravatar here if time
          .form-group.hidden
            label(for='tree') tree
            input#tree.form-control.hidden(type='text', placeholder='favorite type of tree')
          .form-group.hidden
            label(for='tree') favorite hackin' tools
            input#tree.form-control.hidden(type='text', placeholder='favorite type of tree')

          button.btn.btn-default.hidden#submit submit
